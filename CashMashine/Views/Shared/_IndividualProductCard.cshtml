@model CashMashine_Models.Product

<div>
    
    <div class="card bg-white rounded shadow-sm" style="border:1px solid #222;width:301px; height:375px">

        @if(@User.IsInRole(WC.ManagerRole))
        {
        <a asp-controller="Product" asp-action="Detail" asp-route-id="@Model.Id">
            <div class="card-body px-3 pt-3 pb-1 row">
                <div class="col-7"><label class="float-left">@Model.Name</label></div>
            @if (Model.Type == "Мясо" | Model.Type == "Крупа" | Model.Type == "Мука" | Model.Type == "Соль" | Model.Type == "Сахар" | Model.Type == "Овощи")
            {
                <div class="col-5"><label class="float-right"><span class="text-info h5">@Model.Cost₽/кг</span></label> </div>
                }
                else {
                <div class="col-5"><label class="float-right"><span class="text-info h5">@Model.Cost₽/шт</span></label> </div>
                }
            </div>
        </a>
        }
        else
        {
        <div class="card-body px-3 pt-3 pb-1 row">
            <div class="col-7"><label class="float-left">@Model.Name</label></div>
            @if (Model.Type == "Мясо" | Model.Type == "Крупа" | Model.Type == "Мука" | Model.Type == "Соль" | Model.Type == "Сахар" | Model.Type == "Овощи")
            {
                <div class="col-5"><label class="float-right"><span class="text-info h5">@Model.Cost₽/кг</span></label> </div>
            }
            else
            {
                <div class="col-5"><label class="float-right"><span class="text-info h5">@Model.Cost₽/шт</span></label> </div>
            }
        </div>
        }
        <img class="card-img-top @*img-fluid*@ @*d-block*@ mx-auto @*mb-3*@" width="150" height="150" src=@WC.ImagePath@Model.Image>
            <div class="card-body p-1 px-3 row">

                <div class="col-6">
                    <span class="badge p-2 border w-100" style="background-color:lavenderblush">@Model.Type</span>
                </div>
                <div class="col-12 pt-2" style="font-size:13px; text-align:justify">
                    <p> @Model.Description</p>
                </div>

                <div class="col-12 p-1">
                    <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">Добавить в корзину</a>
                </div>
            </div>
        </div>
    </div>
